function main () {
    document.getElementById("welsh-img").addEventListener("click", clickHandler.bind(this, "welsh"));
    document.getElementById("english-img").addEventListener("click", clickHandler.bind(this, "english"));
    document.getElementById("welsh-txt").addEventListener("click", clickHandler.bind(this, "welsh"));
    document.getElementById("english-txt").addEventListener("click", clickHandler.bind(this, "english"));
}

function clickHandler (language) {
	localStorage.language=language;
	window.location.href="name.html";
}
